<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/board"
        />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/griddy"
        android:layout_width="290dp"
        android:layout_height="259dp"
        app:columnCount="3"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:rowCount="3">


        <ImageView
            android:id="@+id/cross1"
            android:layout_width="71dp"
            android:layout_height="61dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="12dp"
            android:onClick="foder"
            android:tag="00"
            app:layout_column="0"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/cross2"
            android:layout_width="71dp"
            android:layout_height="61dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="25dp"
            android:onClick="foder"
            android:tag="10"
            app:layout_column="0"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/cross3"
            android:layout_width="71dp"
            android:layout_height="61dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="27dp"
            android:onClick="foder"
            android:tag="20"
            app:layout_column="0"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/cross4"
            android:layout_width="71dp"
            android:layout_height="61dp"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="12dp"
            android:onClick="foder"
            android:tag="01"
            app:layout_column="1"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/cross5"
            android:layout_width="71dp"
            android:layout_height="61dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp"
            android:onClick="foder"
            android:tag="11"
            app:layout_column="1"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/cross6"
            android:layout_width="71dp"
            android:layout_height="61dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="29dp"
            android:onClick="foder"
            android:tag="21"
            app:layout_column="1"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/cross7"
            android:layout_width="71dp"
            android:layout_height="61dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="12dp"
            android:onClick="foder"
            android:tag="02"
            app:layout_column="2"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/cross8"
            android:layout_width="71dp"
            android:layout_height="61dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:onClick="foder"
            android:tag="12"
            app:layout_column="2"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/cross9"
            android:layout_width="71dp"
            android:layout_height="61dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:onClick="foder"
            android:tag="22"
            app:layout_column="2"
            app:layout_row="2" />

    </androidx.gridlayout.widget.GridLayout>

    <LinearLayout
        android:id="@+id/lay"
        android:layout_width="290dp"
        android:layout_height="259dp"
        android:background="@color/colorAccent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2">

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="" />

        <Button
            android:id="@+id/restart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:onClick="again"
            android:text="Play Again" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>